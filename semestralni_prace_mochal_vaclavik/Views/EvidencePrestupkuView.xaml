<UserControl x:Class="semestralni_prace_mochal_vaclavik.Views.EvidencePrestupkuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:semestralni_prace_mochal_vaclavik.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!-- Nadpis -->
        <Label x:Name="KontaktyNazev1" Content="Evidence Přestupků" Margin="10,10,10,12" FontSize="20" FontWeight="Bold"/>

        <!-- Filtry -->
        <StackPanel Orientation="Horizontal" Margin="10,51,10,6"/>

        <!-- DataGrid -->
        <DataGrid x:Name="PrestupkyGrid" 
       d:ItemsSource="{d:SampleData ItemCount=5}"
       ItemsSource="{Binding Prestupky}"
       SelectionMode="Single"
       SelectionUnit="Cell"
       IsManipulationEnabled="True"
       Margin="10,0,10,20"
       AutoGenerateColumns="False"
       CanUserAddRows="false" Grid.Row="1">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID přestupku" Binding="{Binding IdPrestupku}" Width="*" Visibility="Collapsed"/>

                <DataGridTemplateColumn Header="Typ přestupku" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Typy_prestupkuSeznam, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                         SelectedItem="{Binding TypPrestupku, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" Width="*"/>
                <DataGridTextColumn Header="Jméno Občana" Binding="{Binding JmenoObcana}" Width="*"/>
                <DataGridTextColumn Header="Poznámka" Binding="{Binding Poznamka}" Width="*"/>

                <DataGridTemplateColumn Header="" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Upravit" 
                                 Command="{Binding DataContext.UpravitPrestupekCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                 CommandParameter="{Binding}" 
                                 Margin="1,1" 
                                 Visibility="{Binding DataContext.AdminControlsVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Odebrat" 
                                 Command="{Binding DataContext.OdebratPrestupekCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                 CommandParameter="{Binding}" 
                                 Margin="1,1" 
                                 Visibility="{Binding DataContext.AdminControlsVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Margin="5,0,5,0" Visibility="{Binding KontaktyVisible}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Typ přestupku" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="26" Width="85"/>
            <Label Content="Popis" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="10,0,0,0" Height="26" Width="39"/>
            <Label Content="Celé jméno občana" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="2" Height="26" Width="112" Grid.ColumnSpan="2" Margin="10,0,0,0"/>
            <Label Content="Ulice" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="3" Margin="10,0,0,0" Height="26" Width="36"/>
            <Label Content="ČP" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="3" Margin="121,0,0,0" Height="26" Width="24" Grid.ColumnSpan="2"/>
            <Label Content="Obec" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="5" Height="26" Width="43" Margin="10,0,0,0"/>
            <Label Content="PSČ" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="6" Height="26" Width="31" Margin="5,0,0,0"/>
            <TextBox x:Name="pridatPrestupekPopisZasahu" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="102" Grid.Column="1" Height="18"/>
            <TextBox x:Name="pridatPrestupekObcan" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="98" Grid.Column="2" Margin="10,3,0,0" Height="18"/>
            <TextBox x:Name="pridatPrestupekUlice" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="93" Grid.Column="3" Height="18" Margin="10,0,0,0"/>

            <Button Grid.Column="7" Content="Přidat" Command="{Binding DataContext.PridatPrestupekCommand, RelativeSource={RelativeSource AncestorType={x:Type TabItem}}}"
                            CommandParameter="{Binding}" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="45" Height="20"/>
            <ComboBox x:Name="pridatPrestupekTyp" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="104" Height="20"
                   ItemsSource="{Binding DataContext.Typy_prestupkuSeznam, RelativeSource={RelativeSource AncestorType=TabItem}}"/>
            <Label Grid.Column="2" Content="např: Jan Novák" HorizontalAlignment="Left" Margin="5,22,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="9" FontStyle="Italic" Grid.RowSpan="2" Height="22" Width="73"/>
            <TextBox x:Name="pridatPrestupekCisloPopisne" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="52" Grid.Column="3" Height="18" Grid.ColumnSpan="2" Margin="121,0,0,0"/>
            <TextBox x:Name="pridatPrestupekObec" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="102" Grid.Column="5" Height="18"/>
            <TextBox x:Name="pridatPrestupekPSC" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="52" Grid.Column="6" Height="18"/>

        </Grid>
    </Grid>
</UserControl>
