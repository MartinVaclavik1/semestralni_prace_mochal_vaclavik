<UserControl x:Class="semestralni_prace_mochal_vaclavik.Views.EvidencePrestupkuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:semestralni_prace_mochal_vaclavik.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <!-- Nadpis -->
        <Label x:Name="KontaktyNazev1" Content="Evidence Přestupků" Margin="10,10,10,12" FontSize="20" FontWeight="Bold"/>

        <!-- Filtry -->
        <StackPanel Orientation="Horizontal" Margin="10,51,10,6"/>

        <!-- DataGrid -->
        <DataGrid x:Name="PrestupkyGrid" 
       d:ItemsSource="{d:SampleData ItemCount=5}"
       ItemsSource="{Binding Prestupky}"
       SelectionMode="Single"
       SelectionUnit="Cell"
       IsManipulationEnabled="True"
       Margin="10,0,10,20"
       AutoGenerateColumns="False"
       CanUserAddRows="false" Grid.Row="1">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID přestupku" Binding="{Binding IdPrestupku}" Width="*" Visibility="Collapsed"/>
                <DataGridTextColumn Header="ID občana" Binding="{Binding IdObcana}" Width="*" Visibility="Collapsed"/>
                

                <DataGridTemplateColumn Header="Typ přestupku" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.Typy_prestupkuSeznam, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                         SelectedItem="{Binding TypPrestupku, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Datum" Binding="{Binding Datum}" Width="*"/>
                <DataGridTextColumn Header="Jméno Občana" Binding="{Binding JmenoObcana}" Width="*"/>
                <DataGridTextColumn Header="Poznámka" Binding="{Binding Poznamka}" Width="*"/>

                <DataGridTemplateColumn Header="" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Upravit" 
                                 Command="{Binding DataContext.UpravitPrestupekCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                 CommandParameter="{Binding}" 
                                 Margin="1,1">
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Odebrat" 
                                 Command="{Binding DataContext.OdebratPrestupekCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                 CommandParameter="{Binding}" 
                                 Margin="1,1">
                            </Button>
                                 <!-- Visibility="{Binding DataContext.AdminControlsVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>-->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Margin="5,0,5,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Typ přestupku" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="26" Width="85"/>
            <Label Content="Popis" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Height="26" Width="39"/>
            <Label Content="Jméno občana" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Height="26" Width="91" Grid.ColumnSpan="2" Margin="121,0,0,0"/>
            <Label Content="Ulice" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="3" Height="26" Width="36"/>
            <Label Content="ČP" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="3" Margin="121,0,0,0" Height="26" Width="24" Grid.ColumnSpan="2"/>
            <Label Content="Obec" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="5" Height="26" Width="43"/>
            <Label Content="PSČ" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="5" Height="26" Width="31" Margin="121,0,0,0" Grid.ColumnSpan="2"/>
            
            <TextBox Text="{Binding NovyPrestupekPopisZasahu, UpdateSourceTrigger=PropertyChanged}" x:Name="pridatPrestupekPopisZasahu" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="111" Grid.Column="1" Height="20"/>
            <TextBox Text="{Binding NovyPrestupekJmenoObcana, UpdateSourceTrigger=PropertyChanged}" x:Name="pridatPrestupekObcan" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="112" Grid.Column="1" Margin="121,0,0,0" Height="20" Grid.ColumnSpan="2"/>
            <TextBox Text="{Binding NovyPrestupekUlice, UpdateSourceTrigger=PropertyChanged}" x:Name="pridatPrestupekUlice" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="111" Grid.Column="3" Height="20"/>
            <Label Grid.Column="2" Content="např: Jan Novák" HorizontalAlignment="Left" Margin="5,22,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="9" FontStyle="Italic" Grid.RowSpan="2" Height="22" Width="73"/>
            <TextBox Text="{Binding NovyPrestupekCP, UpdateSourceTrigger=PropertyChanged}" x:Name="pridatPrestupekCisloPopisne" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="52" Grid.Column="3" Height="20" Grid.ColumnSpan="2" Margin="121,0,0,0"/>
            <TextBox Text="{Binding NovyPrestupekObec, UpdateSourceTrigger=PropertyChanged}" x:Name="pridatPrestupekObec" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="111" Grid.Column="5" Height="20"/>
            <TextBox Text="{Binding NovyPrestupekPSC, UpdateSourceTrigger=PropertyChanged}" x:Name="pridatPrestupekPSC" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="51" Grid.Column="5" Height="20" Grid.ColumnSpan="2" Margin="121,0,0,0"/>

            <Button Grid.Column="6"
                    Content="Přidat"
                    Command="{Binding PridatPrestupekCommand}"
                    HorizontalAlignment="Left"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    Width="54"
                    Height="20"
                    Margin="61,0,0,0"
                    Grid.ColumnSpan="2"/>
            <ComboBox x:Name="pridatPrestupekTyp"
                      HorizontalAlignment="Center"
                      Grid.Row="1"
                      VerticalAlignment="Center"
                      Width="104"
                      Height="20"
                      ItemsSource="{Binding DataContext.Typy_prestupkuSeznam, RelativeSource={RelativeSource AncestorType=Grid}}"
                      SelectedItem="{Binding VybranyTypPrestupku, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</UserControl>
