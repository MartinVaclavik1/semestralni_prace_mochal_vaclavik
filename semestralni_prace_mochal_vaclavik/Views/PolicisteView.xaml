<UserControl x:Class="semestralni_prace_mochal_vaclavik.Views.PolicisteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:semestralni_prace_mochal_vaclavik.Views"
    
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="388*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="254*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Label x:Name="KontaktyNazev" Content="Policisté" Margin="10,10,0,171" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="6" Grid.RowSpan="2"/>

        <StackPanel Orientation="Horizontal" Margin="10,2,10,233" Grid.ColumnSpan="6" Grid.Row="1"/>

        <DataGrid x:Name="KontaktyGrid" Grid.Row="1" 
              d:ItemsSource="{d:SampleData ItemCount=5}" 
              ItemsSource="{Binding Policiste}"
              Margin="10,14,10,4" 
              Grid.ColumnSpan="6" 
              SelectionMode="Single"
              SelectionUnit="Cell"
              IsManipulationEnabled="True"
              AutoGenerateColumns="False"
              CanUserAddRows="false">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Jméno" Binding="{Binding Jmeno}" Width="*"/>
                <DataGridTextColumn Header="Příjmení" Binding="{Binding Prijmeni}" Width="*"/>
                <DataGridTemplateColumn Header="Oprávnění" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.HodnostiSeznam, RelativeSource={RelativeSource AncestorType=DataGrid}}"
            SelectedItem="{Binding Hodnost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Jméno nadřízeného" Binding="{Binding Nadrizeny}" Width="*"/>
                <DataGridTextColumn Header="Stanice" Binding="{Binding Stanice}" Width="2*"/>

                <DataGridTemplateColumn Header="Upravit" Width="SizeToCells" 
                                    Visibility="{Binding DataContext.AdministratorVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Upravit" 
                                Command="{Binding DataContext.UpravitPolicistuCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                CommandParameter="{Binding}" 
                                Margin="1,1" 
                                />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Odebrat" Width="SizeToCells"
                                    Visibility="{Binding DataContext.AdministratorVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Odebrat"
                                Command="{Binding DataContext.OdebratPolicistuCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                CommandParameter="{Binding}" 
                                Margin="1,1" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid x:Name="KontaktyAdminGrid" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" Margin="0,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Content="Jméno" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Příjmení" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Column="1" Content="Hodnost" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Column="2" Content="Nadřízený" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Column="3" Content="Stanice" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Column="4" Content="Plat" HorizontalAlignment="Left" Margin="96,0,0,0" VerticalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Grid.Column="6" Content="Datum narození" HorizontalAlignment="Left" Margin="0,3,0,0" VerticalAlignment="Top" Width="96"/>
            <TextBox x:Name="pridatKontaktyJmeno" Text="{Binding Jmeno, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="91"/>
            <TextBox x:Name="pridatKontaktyPrijmeni" Text="{Binding Prijmeni, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="91" Margin="96,0,0,0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="pridatKontaktyNadrizeny" Text="{Binding Nardizeny, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="91" Grid.Column="2" Margin="96,0,0,0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="pridatKontaktyStanice" Text="{Binding Stanice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="91" Grid.Column="3" Margin="96,0,0,0" Grid.ColumnSpan="2"/>
            <TextBox x:Name="pridatKontaktyPlat" Text="{Binding Plat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="91" Grid.Column="4" Margin="96,0,0,0" Grid.ColumnSpan="2"></TextBox>
            <!--<TextBox x:Name="pridatKontaktyDatum" Text="{Binding DatumNarozeni}" Grid.Column="5" Grid.ColumnSpan="2" Margin="96,0,5,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Center"/>-->
            <DatePicker x:Name="pridatKontaktyDatum" SelectedDate="{Binding DatumNarozeni, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="5" Grid.ColumnSpan="2" Margin="96,0,5,0" Grid.Row="1" VerticalAlignment="Center"/>

            <Button Grid.Column="7" Content="Přidat" Command="{Binding DataContext.PridatPolicistuCommand, RelativeSource={RelativeSource AncestorType={x:Type Grid}}}"
                     HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="76"/>
            <ComboBox x:Name="pridatKontaktHodnost" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="96,0,0,0" Grid.Row="1" VerticalAlignment="Center" Width="91" Height="18"
                  ItemsSource="{Binding DataContext.HodnostiSeznam, RelativeSource={RelativeSource AncestorType=Grid}}"
                      SelectedItem="{Binding Hodnost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>


        </Grid>
    </Grid>
</UserControl>
