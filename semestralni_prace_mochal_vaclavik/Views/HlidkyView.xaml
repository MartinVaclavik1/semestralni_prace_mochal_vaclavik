<UserControl x:Class="semestralni_prace_mochal_vaclavik.Views.HlidkyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             
                xmlns:local="clr-namespace:semestralni_prace_mochal_vaclavik.Views"
             xmlns:vm="clr-namespace:semestralni_prace_mochal_vaclavik.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="858"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}" PassEventArgsToCommand="True"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Nadpis -->
        <Label Content="Evidence Hlídek" Margin="10,5,0,5" FontSize="20" FontWeight="Bold"/>

        <!-- Filtry -->
        <StackPanel Orientation="Horizontal" Margin="10,37,10,312" Grid.Row="1"/>

        <!-- DataGrid -->
        <DataGrid x:Name="HlidkyGrid" Grid.Row="1"
              d:ItemsSource="{d:SampleData ItemCount=5}" 
              ItemsSource="{Binding Hlidky}"
              Margin="10,10,10,6" 
              SelectionMode="Single"
              SelectionUnit="Cell"
              IsManipulationEnabled="True"
              AutoGenerateColumns="False"
              CanUserAddRows="false">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Hlídky" Binding="{Binding IdHlidky}" Width="*" Visibility="Hidden"/>
                <DataGridTextColumn Header="Název" Binding="{Binding NazevHlidky}" Width="*"/>

                <DataGridTemplateColumn Header="Typ" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                ItemsSource="{Binding DataContext.TypyHlidkySeznam, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                SelectedItem="{Binding Nazev, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Upravit" 
                                 Command="{Binding DataContext.UpravitHlidkuCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                 CommandParameter="{Binding}" 
                                 Margin="1,1" >
                            </Button>
                                  <!--Visibility="{Binding DataContext.AdminControlsVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>-->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="" Width="SizeToCells">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Odebrat" 
                                    Command="{Binding DataContext.OdebratHlidkuCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                    CommandParameter="{Binding}" 
                                    Margin="1,1">
                            </Button>
                                      <!--Visibility="{Binding DataContext.AdminControlsVisible, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"/>-->
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Content="Název hlídky" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
            <Label Content="Typ" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Grid.Column="1"/>
            <Button Grid.Column="2"
                    Grid.Row="1"
                    Content="Přidat"
                    Command="{Binding PridatHlidkuCommand}" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top" 
                    Width="109" Height="20" 
                    Margin="0,5,0,0"/>

            <TextBox Text="{Binding NovyNazevHlidky, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Margin="0,5,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
            <ComboBox x:Name="pridatHlidkuTyp"
                      Grid.Column="1" 
                      HorizontalAlignment="Center" 
                      Grid.Row="1" 
                      VerticalAlignment="Top" 
                      Width="118" 
                      Height="20"
                      ItemsSource="{Binding DataContext.TypyHlidkySeznam, RelativeSource={RelativeSource AncestorType=Grid}, UpdateSourceTrigger=PropertyChanged}" 
                      Margin="0,5,0,0"
                      SelectedItem="{Binding VybranyTypHlidky, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
    </Grid>
</UserControl>
