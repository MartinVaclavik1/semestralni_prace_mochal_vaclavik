<Window x:Class="semestralni_prace_mochal_vaclavik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:semestralni_prace_mochal_vaclavik"
        mc:Ignorable="d"
        Title="Informační systém Policie České Rapubliky" Height="450" Width="815">

    <TabControl Name="Okna" SelectionChanged="Okna_SelectionChanged" HorizontalAlignment="Left" Width="800">
        <TabControl.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0"/>
                <GradientStop Color="#FF92A1C6" Offset="1"/>
            </LinearGradientBrush>
        </TabControl.Background>
        <TabItem x:Name="Domu" HorizontalAlignment="Center" Height="21" Header="Domu" VerticalAlignment="Center" Width="54">
            <Grid x:Name="DomuGrid" Background="White" Margin="24
,0,24,0" Height="366" RenderTransformOrigin="1,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="VítejteTxt" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="300" Width="298"><Run FontWeight="Bold" Text="Vítejte na portálu Policie České Republiky"/><LineBreak/><Run/><LineBreak/><Run Text="jjiafeaogapijpaifjapofjaip"/><LineBreak/><Run Text="faiejapfiafiajfpaikjap"/><LineBreak/><Run Text="ajapifjapifjapiwfjapf"/><LineBreak/><Run Text="afjaoejsasfvadfafjdnadadhbdi"/><LineBreak/><Run Text="afjsiaohuohufaofjhvao"/><LineBreak/><Run/><LineBreak/><Run Text="Info o tom co se tady dá najít"/></TextBlock>
            </Grid>
        </TabItem>
        <TabItem Header="Kontakty" x:Name="Kontakty" HorizontalAlignment="Left" Margin="2,-2,0,0" Width="62">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="28*"/>
                    <RowDefinition Height="31*"/>
                    <RowDefinition Height="144*"/>
                </Grid.RowDefinitions>
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF567A54" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Label x:Name="KontaktyNazev" Content="Kontakty" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                <DataGrid x:Name="KontaktyGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,10" Grid.Row="2"/>
                <TextBox x:Name="HledatTxt" HorizontalAlignment="Left" Margin="10,33,0,0" TextWrapping="Wrap" Text="Hledat" VerticalAlignment="Top" Width="212" Height="20" Grid.Row="1"/>
                <Button x:Name="Zobrazit_btn" Content="Zobrazit" HorizontalAlignment="Left" Margin="227,33,0,0" VerticalAlignment="Top" Width="69" Click="Button_Click" FontFamily="Yu Gothic" Background="#FF0079FF" BorderBrush="#FF004CA0" Foreground="White" Height="20" FontWeight="Bold" Grid.Row="1" FontSize="11"/>
                <Button x:Name="ZrusFiltry_btn" Content="Zrušit filtry" HorizontalAlignment="Left" Margin="301,33,0,0" VerticalAlignment="Top" Width="85" Click="Button_Click_1" BorderBrush="#FFAA0000" Background="Red" Foreground="White" FontFamily="Yu Gothic" Height="20" Grid.Row="1" FontSize="11"/>
            </Grid>
        </TabItem>
        <TabItem Header="Evidence přestupků" x:Name="Prestupky" HorizontalAlignment="Right" Margin="0,-2,-2,0" Width="120">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="92*"/>
                    <ColumnDefinition Width="703*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="75*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="301*"/>
                </Grid.RowDefinitions>
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF443229" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Label x:Name="KontaktyNazev1" Content="Evidence Přestupků" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Grid.ColumnSpan="2" Height="36" Width="194"/>
                <DataGrid x:Name="KontaktyGrid1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,10" Grid.Row="2" Grid.ColumnSpan="2"/>
                <TextBox x:Name="HledatTxt_Kopírovat" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Hledat" VerticalAlignment="Center" Width="212" Height="20" Grid.Row="1" Grid.ColumnSpan="2"/>
                <Button x:Name="Zobrazit_btn_Kopírovat" Content="Zobrazit" HorizontalAlignment="Left" Margin="134,0,0,0" VerticalAlignment="Center" Width="69" Click="Button_Click" FontFamily="Yu Gothic" Background="#FF0079FF" BorderBrush="#FF004CA0" Foreground="White" Height="20" FontWeight="Bold" Grid.Row="1" FontSize="11" Grid.Column="1"/>
                <Button x:Name="ZrusFiltry_btn_Kopírovat" Content="Zrušit filtry" HorizontalAlignment="Left" Margin="208,0,0,0" VerticalAlignment="Center" Width="85" Click="Button_Click_1" BorderBrush="#FFAA0000" Background="Red" Foreground="White" FontFamily="Yu Gothic" Height="20" Grid.Row="1" FontSize="11" Grid.Column="1"/>
            </Grid>
        </TabItem>
        <TabItem x:Name="Ucet" Header="Můj účet" Margin="475,-2,-491,0">
            <Grid x:Name="UcetGrid" Height="380" Margin="10,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="White" Offset="0"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Label x:Name="Nazev" Content="VÁŠ ÚČET" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" Padding="10,5,5,5" VerticalContentAlignment="Center"/>
                <Button x:Name="PotvrditBtn" Content="Potvrdit" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Width="71" Click="PotvrditBtn_Click" Margin="0,5,0,0" FontWeight="Bold" Foreground="Black" IsEnabled="False"/>
                <Grid x:Name="GridLeft" Margin="0,0,397,0" Width="350" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label x:Name="Jmeno" Content="Jmeno" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="Prijmeni" Content="Prijmeni" Grid.Row="1" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="Adresa" Content="Adresa" Grid.Row="2" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="Ulice" Content="Ulice" Grid.Row="3" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="PSC" Content="PSČ" Grid.Row="4" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    <Label x:Name="Země" Content="Země" Grid.Row="5" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                </Grid>
                <Grid Margin="375,0,0,0" Grid.Column="2" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="JmenoTxt" TextWrapping="Wrap" Text="Jan" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" BorderBrush="White"/>
                    <TextBox x:Name="PrijmeniTxt" TextWrapping="Wrap" Text="Novák" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" BorderBrush="White"/>
                    <TextBox x:Name="AdresaTxt" TextWrapping="Wrap" Text="Adresa 1" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" BorderBrush="White"/>
                    <TextBox x:Name="UliceTxt" TextWrapping="Wrap" Text="Ulice " Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" BorderBrush="White"/>
                    <TextBox x:Name="PSCTxt" TextWrapping="Wrap" Text="000 00" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" BorderBrush="White"/>
                    <TextBox x:Name="ZemeTxt" TextWrapping="Wrap" Text="Česká republika" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" BorderBrush="White"/>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem x:Name="Admin" Header="Admin nastavení" Margin="288,-2,-316,0">
            <Grid Background="#FFE5E5E5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="153*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.RowSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="55*"/>
                        <RowDefinition Height="351*"/>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="HledatTxt_Kopírovat1" HorizontalAlignment="Left" Margin="14,0,0,0" TextWrapping="Wrap" Text="Hledat" VerticalAlignment="Center" Width="212" Height="20"/>
                    <Button x:Name="Zobrazit_btn_Kopírovat1" Content="Zobrazit" HorizontalAlignment="Left" Margin="230,0,0,0" VerticalAlignment="Center" Width="70" Click="Button_Click" FontFamily="Yu Gothic" Background="#FF0079FF" BorderBrush="#FF004CA0" Foreground="White" Height="20" FontWeight="Bold" FontSize="11"/>
                    <Button x:Name="ZrusFiltry_btn_Kopírovat1" Content="Zrušit filtry" HorizontalAlignment="Left" Margin="304,0,0,0" VerticalAlignment="Center" Width="86" Click="Button_Click_1" BorderBrush="#FFAA0000" Background="Red" Foreground="White" FontFamily="Yu Gothic" Height="20" FontSize="11"/>
                </Grid>
                <DataGrid x:Name="UzivateleGrid" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="764" Height="285" Grid.Row="1" Margin="15,0,0,0" SelectionChanged="DataGrid_SelectionChanged"/>
                <Label Content="Akce:" HorizontalAlignment="Left" Margin="15,0,0,0" Grid.Row="2" VerticalAlignment="Center" FontWeight="Bold"/>
                <Button x:Name="btnEmulovat" Content="Emulovat" HorizontalAlignment="Left" Margin="56,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="100" Click="Button_Click_2" Height="20"/>
                <Button x:Name="btnUpravit" Content="Upravit" HorizontalAlignment="Left" Margin="161,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="100" Height="20"/>
                <Button x:Name="btnPridat" Content="Přidat" HorizontalAlignment="Left" Margin="266,0,0,0" Grid.Row="2" VerticalAlignment="Center" Width="100" Height="20"/>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
